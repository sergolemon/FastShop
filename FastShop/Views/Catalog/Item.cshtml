@model Product
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Session
@using FastShop.Classes

	<div class="row">
		<div class="col-lg-5">
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

				@{ string[] img = Model.Img.Split(",");}

				<ol class="carousel-indicators">

					@if (img.Count() > 1)
					{
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>

						for (int i = 1; i < img.Count(); i++)
						{
							<li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
						}
					}
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100" src="~/files/@img[0]">
					</div>

					@for (int i = 1; i < img.Count(); i++)
					{
						<div class="carousel-item">
							<img class="d-block w-100" src="~/files/@img[i]">
						</div>
					}
				</div>

				@if(img.Count() > 1)
				{
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				}
			</div>
		</div>

		<div class="col-lg-7">
			<div><h3>@Model.Name</h3></div>
			<div id="price">
				@if(Model.IsSale){<s class="text-danger"><h3 class="text-secondary m-0">@Model.OldPrice грн</h3></s>
				<h3><span class="badge badge-warning">@Model.Price грн</span></h3>}else{
					<h3 class="text-secondary m-0">@Model.Price грн</h3>
				}
			</div>

			<div>
				<button id="AddToCart" value="@Model.Id" class="btn btn-success">В кошик</button>
			</div>
		</div>

		<div class="col-lg-5">
			<h4>Характеристики</h4>
			<p style="white-space: pre-wrap;">@Model.Desc</p>
		</div>
	</div>


