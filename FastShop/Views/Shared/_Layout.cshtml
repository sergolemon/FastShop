<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>FastShop @ViewBag.Title</title>
	<link rel="stylesheet" href="~/lib/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
		<a class="navbar-brand" href="/"><img style="max-height: 50px;" src="~/img/logo.png" /></a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link" href="/">Головна</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/Catalog">Каталог</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/Catalog/Category">Категорії</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/Cart">Кошик</a>
				</li>
				@if (User.Identity.IsAuthenticated)
				{
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							@User.Identity.Name
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="/Account/Settings">Налаштування</a>
							<form action="/Account/Logout" method="post"><button type="submit" class="dropdown-item">Вихід</button></form>
						</div>
					</li>
				}
				else
				{
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Аккаунт
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="/Account/Login">Вхід</a>
							<a class="dropdown-item" href="/Account/Register">Реєстрація</a>
						</div>
					</li>
				}
			</ul>
			<form method="get" action="/Catalog/Search" class="form-inline my-2 my-lg-0">
				<input name="q" class="form-control mr-sm-2" type="search" placeholder="Я шукаю..." aria-label="Search">
				<button id="search-btn" class="btn btn-outline-success my-2 my-sm-0" type="submit">Знайти</button>
			</form>
		</div>
	</nav>

	<div class="container">
		<br />
		@RenderBody()
		<br />
	</div>

	<footer class="row p-4 m-0 border-top">
		<div class="col-lg-4">
			<span>Всі права захищені &copy;@DateTime.Now.Year</span>
		</div>

		<div class="col-lg-4">

		</div>

		<div class="col-lg-4">

		</div>
	</footer>

	<script src="~/lib/jquery.js"></script>
	<script src="~/lib/bootstrap.min.js"></script>
	<script src="~/js/script.js"></script>
</body>
</html>
